{
  "name": "diminish",
  "version": "0.1.0",
  "engines": {
    "node": ">=6.4.0"
  },
  "description": "Minimal dependency injection to diminish code complexity",
  "main": "src",
  "types": "src",
  "author": "Asa Jones <thinkinfractals@gmail.com>",
  "license": "ISC",
  "keywords": [
    "dependency",
    "injection",
    "inversion",
    "control",
    "ioc",
    "di"
  ],
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "src/**/*.js*",
      "src/**/*.d.ts*",
      "src/**/*.spec.ts"
    ]
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf src/**/*.d.ts* src/**/*.js*",
    "spec": "mocha --opts mocha.opts src/**/*.spec.ts",
    "nyc": "nyc npm run spec",
    "lint": "standard src/**/*.ts",
    "test": "npm run lint && npm run nyc"
  },
  "dependencies": {
    "@types/esprima": "^4.0.2",
    "@types/node": "^10.12.18",
    "@types/reflect-metadata": "^0.1.0",
    "esprima": "^4.0.1",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^7.0.3",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint-plugin-typescript": "^0.14.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.9",
    "standard": "^12.0.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6",
    "typescript-eslint-parser": "^21.0.2"
  }
}
